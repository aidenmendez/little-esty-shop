<%= form_with url: path, model: item, method: method, class: "item_form", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, id: "name" %>
  <%= f.label :description %>
  <%= f.text_field :description, id: "description" %>
  <%= f.label :unit_price %>
  <%= f.text_field :unit_price, id: "unit_price" %>
<%= submit_tag button_text %>
<% end %>